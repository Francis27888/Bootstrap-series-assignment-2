<h3>Send it with the following contents.</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
    <%= form.hidden_field :email %>
  <%= form.hidden_field :content %>
  
  <!--<p>Name:  <%= @blog.name %></p>-->
  <!--<p>Email: <%= @blog.email %></p>-->
  <p>Content: <%= @blog.content %></p>
  <p>Image: <%= image_tag(@blog.image.url(:thumb)) %></p>
  <%= hidden_field_tag :"cache[image]",@blog.image.cache_name%>
  <%= form.submit  "submit",class:'btn btn-success',style:'float:left'%>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :email %>
  <%= form.hidden_field :content %>
   <%= form.hidden_field :image %>
  <%= form.submit "Back", name: 'back',class:'btn btn-info',style:'margin-left:20px' %>
<% end %>